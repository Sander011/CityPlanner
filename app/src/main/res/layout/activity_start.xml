<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="hci.cityplanner.StartActivity" android:background="@android:color/white">

    <Button
            android:text="Next"
            android:onClick="openMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/City"
            android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/border"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_height="30dp"
            android:hint="  Search city..."/>
    <ImageButton
            android:layout_height="@dimen/cat_icon_size"
            android:id="@+id/category4"
            android:background="@android:color/white" android:elevation="0dp"
            android:alpha="0.5"
            android:onClick="buttonPress"
            android:src="@mipmap/ic_shopping"
            android:layout_width="@dimen/cat_icon_size"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/category3" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="30sp"
            android:layout_below="@+id/seekBar2" android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"/>
    <ImageView
            android:layout_width="@dimen/int_icon_size"
            android:layout_height="@dimen/int_icon_size" app:srcCompat="@mipmap/ic_intense"
            android:id="@+id/imageView4"
            android:layout_below="@+id/seekBar2" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:text="City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="2"
            android:progress="1"
            android:id="@+id/seekBar2"
            android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="30sp"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/City" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_height="@dimen/int_icon_size" app:srcCompat="@mipmap/ic_relaxed"
            android:id="@+id/imageView5"
            android:layout_width="@dimen/int_icon_size" android:layout_below="@+id/seekBar2"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <ImageView
            android:layout_width="@dimen/int_icon_size"
            android:layout_height="@dimen/int_icon_size" app:srcCompat="@mipmap/ic_casual"
            android:id="@+id/imageView6"
            android:layout_below="@+id/seekBar2" android:layout_centerHorizontal="true"/>
    <ImageButton
            android:layout_height="@dimen/cat_icon_size"
            android:id="@+id/category1"
            android:background="@android:color/white" android:elevation="0dp"
            android:alpha="0.5"
            android:onClick="buttonPress"
            android:src="@mipmap/ic_tree"
            android:layout_width="@dimen/cat_icon_size"
            android:scaleType="fitXY"
            android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <ImageButton
            android:layout_height="@dimen/cat_icon_size"
            android:id="@+id/category2"
            android:background="@android:color/white" android:elevation="0dp"
            android:alpha="0.5"
            android:onClick="buttonPress"
            android:layout_width="@dimen/cat_icon_size"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_temple"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/imageView5" android:layout_toEndOf="@+id/imageView5"/>
    <ImageButton
            android:layout_height="@dimen/cat_icon_size"
            android:id="@+id/category3"
            android:background="@android:color/white" android:elevation="0dp"
            android:alpha="0.5"
            android:onClick="buttonPress"
            android:src="@mipmap/ic_diner"
            android:layout_width="@dimen/cat_icon_size"
            android:scaleType="fitXY"
            android:layout_below="@+id/textView5" android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4" android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"/>
</RelativeLayout>
